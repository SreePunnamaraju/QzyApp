<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/mainView"
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="@dimen/standard_20">

    <RelativeLayout
        android:id="@+id/imageView"
        android:layout_height="80dp"
        android:layout_width="100dp">
        <ImageView
            android:id="@+id/restImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/ic_restaurant_black_24dp"
            android:scaleType="center"
            android:background="@drawable/round_bg"
            />

        <RelativeLayout
            android:layout_height="25dp"
            android:layout_width="50dp"
            android:background="@drawable/round_bg_rating"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp">
                <TextView
                    android:id="@+id/rating"
                    android:text="4.3"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="6dp"
                    android:textStyle="bold"
                   />
                <ImageView
                    android:id="@+id/star"
                    android:layout_toEndOf="@+id/rating"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="6dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/ic_star"/>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/fav">

        <TextView
            android:id="@+id/restName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shoalin Work"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <TextView
            android:layout_below="@+id/restName"
            android:id="@+id/cusineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            android:textSize="13sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_below="@+id/cusineName"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25-30 MIN"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_below="@+id/cusineName"
            android:id="@+id/price"
            android:layout_toEndOf="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="300 for 2"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/fav"
        android:layout_width="30dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        app:srcCompat ="@drawable/ic_star_red"
        android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/mainView"
        android:layout_marginTop="10dp"
        android:background="@color/grey"
        android:layout_marginStart="@dimen/standard_20"
        android:layout_marginEnd="10dp"/>

</RelativeLayout>